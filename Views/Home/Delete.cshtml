@{
    ViewData["Title"] = "Confirm Deletion";
    Layout = "_Layout1";
}
@model Accident
    <header class="masthead" style="padding:35px;padding-top:90px;background-image: url('../../img/database.jpg');background-position: 49% 51%;">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="page-subheading" style="color:white; text-align: center;">
                        <h1>Confirm Deletion</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>


<div class="text-center">
    <h3>Are you sure you want to delete this Accident Info (@Model.crash_id)?</h3>

    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

        <input type="hidden" asp-for="crash_id" />
    </form>
</div>