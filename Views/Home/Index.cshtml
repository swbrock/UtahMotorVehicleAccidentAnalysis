@{
    ViewData["Title"] = "Home";
    Layout = "_Layout1";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('img/traffic.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Utah Motor Vehicle Accident Analysis</h1>
                    <span class="subheading">Created by DriveSave CO.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Start cookieyes banner -->
<script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/041dd85d5bfb2a84274b6284/script.js"></script>
<!-- End cookieyes banner -->


<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- About Tab -->
            <div class="post-preview">
                <a asp-controller="Home" asp-action="About">
                    <h2 class="post-title">About</h2>
                    <h3 class="post-subtitle">Want to know more about our mission? Click here!</h3>
                </a>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
            <!-- Analysis Tab -->
            <div class="post-preview">
                <a asp-controller="Inference" asp-action="EnterData">
                    <h2 class="post-title">Prediction</h2>
                    <h3 class="post-subtitle">See the top 10 factors that affect injuries and get an estimate for the severity of those injuries.</h3>
                </a>
            </div>

            <!-- Divider-->
            <hr class="my-4" />
            <!-- Counties Tab -->
            <div class="post-preview">
                <a asp-controller="Home" asp-action="Counties">
                    <h2 class="post-title">Counties</h2>
                    <h3 class="post-subtitle">View the most common factors that contribute to accidents for each city.</h3>
                </a>
            </div>

            <!-- Divider-->
            <hr class="my-4" />
            <!-- Factors Tab -->
            <div class="post-preview">
                <a asp-controller="Home" asp-action="Factors">
                    <h2 class="post-title">Factors</h2>
                    <h3 class="post-subtitle">See all factors that contribute to car accidents and which cities are affected the most.</h3>
                </a>
            </div>

            <!-- Divider-->
            <hr class="my-4" />
            <!-- DriveSafe Tab -->
            <div class="post-preview">
                <a asp-controller="Home" asp-action="DriveSafe">
                    <h2 class="post-title">DriveSafe</h2>
                    <h3 class="post-subtitle">Want to stay informed? Click here to sign up for our newsletter!</h3>
                </a>
            </div>

            <!-- Divider-->
            <hr class="my-4" />
        </div>
    </div>
</div>
