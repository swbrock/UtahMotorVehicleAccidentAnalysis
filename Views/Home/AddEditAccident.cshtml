@{
}

@model Accident 

<div class="text-center">
    <h2>Accident Info:</h2>
    
    <!--Form-->
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="crash_datetime">Date And Time:</label>
        <input asp-for="crash_datetime" /><br />

        <label asp-for="route">Route:</label>
        <input asp-for="route" /><br />

        <label asp-for="milepoint">Mile Point:</label>
        <input asp-for="milepoint" /><br />

        <label asp-for="lat_utm_y">Latitude:</label>
        <input asp-for="lat_utm_y" /><br />

        <label asp-for="long_utm_x">Longitude:</label>
        <input asp-for="long_utm_x" /><br />

        <label asp-for="main_road_name">Main Road Name:</label>
        <input asp-for="main_road_name" /><br />

        <label asp-for="city">City:</label>
        <input asp-for="city" /><br />

        <label asp-for="county_name">County:</label>
        <input asp-for="county_name" /><br />

        <label asp-for="crash_severity_id">Crash Severity Rating:</label>
        <select asp-for="crash_severity_id">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <label asp-for="work_zone_related">Was this Work or Zone related?</label>
        <select asp-for="work_zone_related">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="pedestrian_involved">Was there a pedestrian involved?</label>
        <select asp-for="pedestrian_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="bicyclist_involved">Was there a bicyclist invloved?</label>
        <select asp-for="bicyclist_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="motorcycle_involved">Was there a motorcycle involved?</label>
        <select asp-for="motorcycle_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="improper_restraint">Was there an improper restraint involved?</label>
        <select asp-for="improper_restraint">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="unrestrained">Was someone not wearing a seatbelt?</label>
        <select asp-for="unrestrained">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="dui">Was someone driving under the influence of alcohol?</label>
        <select asp-for="dui">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="intersection_related">Was there an intersection involved?</label>
        <select asp-for="intersection_related">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="wild_animal_related">Was there a wild animal involved?</label>
        <select asp-for="wild_animal_related">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="domestic_animal_related">Was there a Domestic animal involved?</label>
        <select asp-for="domestic_animal_related">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for= "overturn_rollover">Did a car get overturned?</label>
        <select asp-for="overturn_rollover">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="commercial_motor_veh_involved">Was there a commercial motor vehicle involved?</label>
        <select asp-for="commercial_motor_veh_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="teenage_driver_involved">Was there a Teenage Driver involved?</label>
        <select asp-for="teenage_driver_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="older_driver_involved">Was there an older driver involved?</label>
        <select asp-for="older_driver_involved">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="night_dark_condition">Was it at night?</label>
        <select asp-for="night_dark_condition">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="single_vehicle">Was there only one car involved?</label>
        <select asp-for="single_vehicle">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="distracted_driving">Was the driver distracted?</label>
        <select asp-for="distracted_driving">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="drowsy_driving">Was the driver tired?</label>
        <select asp-for="drowsy_driving">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <label asp-for="roadway_departure">Was it a roadway departure accident?</label>
        <select asp-for="roadway_departure">
            {
            <option value="TRUE">Yes</option>
            <option value="FALSE">No</option>
            }
        </select>

        <button type="submit">Add Accident</button>
    </form>
</div>